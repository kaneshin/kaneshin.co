{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2017"],
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "public", ".cache", "static"]
}
